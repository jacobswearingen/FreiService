@page "/sanctoral"
@using FreiService.Data.Services
@using FreiService.Data.Models
@using FreiService.Computus
@rendermode InteractiveServer
@inject ISanctoralService SanctoralService

<PageTitle>Sanctoral Days Manager</PageTitle>

<h1>Sanctoral Days Manager</h1>

<div class="row">
    <div class="col-md-5">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@(editingId.HasValue ? "Edit Sanctoral Day" : "Add Sanctoral Day")</h4>
            </div>
            <div class="card-body">
                <EditForm Model="@newSanctoralDay" OnValidSubmit="@SaveSanctoralDay">
                    <DataAnnotationsValidator />
                    
                    <div class="mb-3">
                        <label class="form-label">Name:</label>
                        <InputText @bind-Value="newSanctoralDay.Name" class="form-control" placeholder="e.g., John's Baptism, Wedding Anniversary" />
                        <ValidationMessage For="@(() => newSanctoralDay.Name)" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Month:</label>
                            <InputNumber @bind-Value="newSanctoralDay.Month" class="form-control" min="1" max="12" />
                            <ValidationMessage For="@(() => newSanctoralDay.Month)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Day:</label>
                            <InputNumber @bind-Value="newSanctoralDay.Day" class="form-control" min="1" max="31" />
                            <ValidationMessage For="@(() => newSanctoralDay.Day)" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rank:</label>
                        <InputSelect @bind-Value="newSanctoralDay.Rank" class="form-select">
                            <option value="@Rank.Commemoration">Commemoration</option>
                            <option value="@Rank.LesserFeast">Lesser Feast</option>
                            <option value="@Rank.Feast">Feast</option>
                            <option value="@Rank.Apostle">Apostle</option>
                            <option value="@Rank.PrincipalFeast">Principal Feast</option>
                        </InputSelect>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Liturgical Color:</label>
                        <InputSelect @bind-Value="newSanctoralDay.LiturgicalColor" class="form-select">
                            <option value="@LiturgicalColor.White">White</option>
                            <option value="@LiturgicalColor.Red">Red</option>
                            <option value="@LiturgicalColor.Violet">Violet</option>
                            <option value="@LiturgicalColor.Green">Green</option>
                            <option value="@LiturgicalColor.Black">Black</option>
                        </InputSelect>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes (Optional):</label>
                        <InputTextArea @bind-Value="newSanctoralDay.Notes" class="form-control" rows="3" placeholder="e.g., Born 2020, Baptized at St. John's" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> @(editingId.HasValue ? "Update" : "Add")
                        </button>
                        @if (editingId.HasValue)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                                <i class="bi bi-x-circle"></i> Cancel
                            </button>
                        }
                    </div>
                </EditForm>

                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert @messageClass mt-3" role="alert">
                        @message
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-7">
        <div class="card">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Sanctoral Days</h4>
                <div>
                    <button class="btn btn-sm btn-light me-2" @onclick="InitializeDefaultCalendar">
                        <i class="bi bi-download"></i> Initialize TLH Calendar
                    </button>
                    <button class="btn btn-sm btn-light" @onclick="LoadSanctoralDays">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filterOptions" id="filterAll" checked @onclick='() => { filterMode = "all"; ApplyFilter(); }' />
                        <label class="btn btn-outline-primary" for="filterAll">All (@allCount)</label>

                        <input type="radio" class="btn-check" name="filterOptions" id="filterCustom" @onclick='() => { filterMode = "custom"; ApplyFilter(); }' />
                        <label class="btn btn-outline-primary" for="filterCustom">Custom Only (@customCount)</label>

                        <input type="radio" class="btn-check" name="filterOptions" id="filterBuiltIn" @onclick='() => { filterMode = "builtin"; ApplyFilter(); }' />
                        <label class="btn btn-outline-primary" for="filterBuiltIn">Built-in Only (@builtInCount)</label>
                    </div>
                </div>

                @if (filteredSanctoralDays != null && filteredSanctoralDays.Count > 0)
                {
                    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                        <table class="table table-striped table-sm table-hover">
                            <thead class="sticky-top bg-white">
                                <tr>
                                    <th>Date</th>
                                    <th>Name</th>
                                    <th>Rank</th>
                                    <th>Color</th>
                                    <th>Type</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var day in filteredSanctoralDays)
                                {
                                    <tr>
                                        <td>@($"{day.Month:D2}/{day.Day:D2}")</td>
                                        <td>
                                            <strong>@day.Name</strong>
                                            @if (!string.IsNullOrEmpty(day.Notes))
                                            {
                                                <br /><small class="text-muted">@day.Notes</small>
                                            }
                                        </td>
                                        <td>@day.Rank</td>
                                        <td>
                                            <span class="badge" style="background-color: @GetColorBadge(day.LiturgicalColor)">
                                                @day.LiturgicalColor
                                            </span>
                                        </td>
                                        <td>
                                            @if (day.IsCustom)
                                            {
                                                <span class="badge bg-info">Custom</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Built-in</span>
                                            }
                                        </td>
                                        <td>
                                            @if (day.IsCustom)
                                            {
                                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => EditSanctoralDay(day)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteSanctoralDay(day.Id)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <small class="text-muted">TLH</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else if (sanctoralDays != null)
                {
                    <div class="alert alert-info" role="alert">
                        No sanctoral days found. Click "Initialize TLH Calendar" to load the default calendar.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<SanctoralDay>? sanctoralDays;
    private List<SanctoralDay>? filteredSanctoralDays;
    private SanctoralDay newSanctoralDay = new();
    private Guid? editingId = null;
    private string? message;
    private string messageClass = "alert-info";
    private string filterMode = "all";
    private int allCount = 0;
    private int customCount = 0;
    private int builtInCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadSanctoralDays();
    }

    private async Task LoadSanctoralDays()
    {
        try
        {
            sanctoralDays = await SanctoralService.ListAllSanctoralDaysAsync();
            allCount = sanctoralDays.Count;
            customCount = sanctoralDays.Count(d => d.IsCustom);
            builtInCount = sanctoralDays.Count(d => !d.IsCustom);
            ApplyFilter();
            message = null;
        }
        catch (Exception ex)
        {
            message = $"Error loading sanctoral days: {ex.Message}";
            messageClass = "alert-danger";
        }
    }

    private void ApplyFilter()
    {
        if (sanctoralDays == null)
        {
            filteredSanctoralDays = null;
            return;
        }

        filteredSanctoralDays = filterMode switch
        {
            "custom" => sanctoralDays.Where(d => d.IsCustom).ToList(),
            "builtin" => sanctoralDays.Where(d => !d.IsCustom).ToList(),
            _ => sanctoralDays.ToList()
        };
    }

    private async Task SaveSanctoralDay()
    {
        try
        {
            if (editingId.HasValue)
            {
                await SanctoralService.UpdateSanctoralDayAsync(editingId.Value, newSanctoralDay);
                message = "Sanctoral day updated successfully!";
                editingId = null;
            }
            else
            {
                await SanctoralService.AddSanctoralDayAsync(newSanctoralDay);
                message = "Sanctoral day added successfully!";
            }

            messageClass = "alert-success";
            newSanctoralDay = new SanctoralDay();
            await LoadSanctoralDays();
        }
        catch (Exception ex)
        {
            message = $"Error saving sanctoral day: {ex.Message}";
            messageClass = "alert-danger";
        }
    }

    private void EditSanctoralDay(SanctoralDay day)
    {
        editingId = day.Id;
        newSanctoralDay = new SanctoralDay
        {
            Name = day.Name,
            Month = day.Month,
            Day = day.Day,
            Rank = day.Rank,
            LiturgicalColor = day.LiturgicalColor,
            Notes = day.Notes,
            IsMoveable = day.IsMoveable,
            MoveableRule = day.MoveableRule,
            ProperId = day.ProperId
        };
        message = null;
    }

    private void CancelEdit()
    {
        editingId = null;
        newSanctoralDay = new SanctoralDay();
        message = null;
    }

    private async Task DeleteSanctoralDay(Guid id)
    {
        try
        {
            var success = await SanctoralService.DeleteSanctoralDayAsync(id);
            if (success)
            {
                message = "Sanctoral day deleted successfully!";
                messageClass = "alert-warning";
                await LoadSanctoralDays();
            }
            else
            {
                message = "Sanctoral day not found.";
                messageClass = "alert-danger";
            }
        }
        catch (Exception ex)
        {
            message = $"Error deleting sanctoral day: {ex.Message}";
            messageClass = "alert-danger";
        }
    }

    private async Task InitializeDefaultCalendar()
    {
        try
        {
            var count = await SanctoralService.InitializeDefaultSanctoralCalendarAsync();
            message = $"Initialized TLH calendar. Added {count} new sanctoral days.";
            messageClass = "alert-success";
            await LoadSanctoralDays();
        }
        catch (Exception ex)
        {
            message = $"Error initializing calendar: {ex.Message}";
            messageClass = "alert-danger";
        }
    }

    private string GetColorBadge(LiturgicalColor color)
    {
        return color switch
        {
            LiturgicalColor.White => "#f8f9fa; color: #212529;",
            LiturgicalColor.Red => "#dc3545; color: white;",
            LiturgicalColor.Violet => "#6f42c1; color: white;",
            LiturgicalColor.Black => "#212529; color: white;",
            LiturgicalColor.Green => "#198754; color: white;",
            _ => "#6c757d; color: white;"
        };
    }
}
